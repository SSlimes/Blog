.about-footer {
  text-align: center;
  margin-top: 50px;
  padding: 30px;
  background: rgba(255, 105, 180, 0.1);
  border-radius: 15px;
  box-shadow: var(--shadow-l1);
}

.about-footer p {
  margin: 0;
  font-size: 1.2em;
  color: var(--accent-color);
  font-weight: 600;
}

/* 响应式设计 */
